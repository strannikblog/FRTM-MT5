{
  "permissions": {
    "allow": [
      "Bash(git push)"
    ],
    "deny": [],
    "ask": []
  },
  "tools": {
    "Bash": {
      "enabled": true,
      "safe": true
    }
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "command": "bash .claude/scripts/validate-bash.sh"
          }
        ]
      }
    ]
  }
}
